@model IEnumerable<Unipam.TCC.DAL.Entity.Etapa>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Nova Etapa", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoEntrega.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NotaMinima)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoEntrega.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataFim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NotaMinima)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdEtapa }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdEtapa }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.IdEtapa })
        </td>
    </tr>
}

</table>
